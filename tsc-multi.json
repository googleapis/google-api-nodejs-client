{
  "targets": [
    {
      "extname": ".js",
      "module": "commonjs",
      "outDir": "build/cjs",
      "tsBuildInfoFile": "build/cjs.tsbuildinfo"
    },
    {
      "extname": ".mjs",
      "module": "ES2022",
      "outDir": "build/esm",
      "moduleResolution": "NodeNext",
      "tsBuildInfoFile": "build/esm.tsbuildinfo",
      "include": [
        "src/*.ts",
        "src/**/*.ts"
      ]
    }
  ],
  "projects": [
    "tsconfig.json"
  ]
}